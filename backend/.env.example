# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_PORT=8280
APP_ENV=development  # development | production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXP_DAYS=180

# Database
DATABASE_URL=postgres://user:password@localhost:5432/phd?sslmode=disable

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-secure-password

# File storage
UPLOAD_DIR=./uploads

# SMTP Email Configuration
# Development (Mailpit - local testing):
#   SMTP_HOST=localhost
#   SMTP_PORT=1027
#   SMTP_USER=
#   SMTP_PASS=
#
# Production (Gmail example):
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_USER=your-email@gmail.com
#   SMTP_PASS=your-app-specific-password
#
# Production (SendGrid):
#   SMTP_HOST=smtp.sendgrid.net
#   SMTP_PORT=587
#   SMTP_USER=apikey
#   SMTP_PASS=your-sendgrid-api-key
#
# Production (AWS SES):
#   SMTP_HOST=email-smtp.us-east-1.amazonaws.com
#   SMTP_PORT=587
#   SMTP_USER=your-aws-smtp-username
#   SMTP_PASS=your-aws-smtp-password

SMTP_HOST=localhost
SMTP_PORT=1027
SMTP_USER=
SMTP_PASS=
SMTP_FROM="PhD Portal <no-reply@phd.local>"

# Frontend URL (for email links)
FRONTEND_BASE_URL=http://localhost:5173

# S3-compatible storage
# Development (MinIO):
#   S3_ENDPOINT=http://localhost:9090
#   S3_ACCESS_KEY=minioadmin
#   S3_SECRET_KEY=minioadmin
#   S3_USE_PATH_STYLE=true
#
# Production (AWS S3):
#   S3_ENDPOINT=  (leave empty for AWS)
#   S3_ACCESS_KEY=your-aws-access-key
#   S3_SECRET_KEY=your-aws-secret-key
#   S3_USE_PATH_STYLE=false

S3_ENDPOINT=http://localhost:9090
S3_REGION=us-east-1
S3_BUCKET=phd-portal
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_PATH_STYLE=true
S3_PRESIGN_EXPIRES_MINUTES=15
S3_MAX_FILE_SIZE_MB=100

# Redis (used by debouncer and cleanup worker)
# Development:
#   REDIS_ADDR=localhost:6381
#   REDIS_PASSWORD=
#
# Production:
#   REDIS_ADDR=your-redis-host:6379
#   REDIS_PASSWORD=your-redis-password

REDIS_ADDR=localhost:6381
REDIS_PASSWORD=
NOTIFICATION_DEBOUNCE_MINUTES=10

# Demo University Credentials (for testing/demo purposes)
# These are available after running migration 0047_demo_university_seed
# All demo users share the same password for convenience
DEMO_ADMIN_USER=demo.admin
DEMO_PASSWORD=demopassword123!

# Demo Advisors (same password as DEMO_PASSWORD)
DEMO_ADVISOR_1=dr.johnson
DEMO_ADVISOR_2=dr.williams

# Demo Students (same password as DEMO_PASSWORD)
DEMO_STUDENT_1=demo.student1
DEMO_STUDENT_2=demo.student2
