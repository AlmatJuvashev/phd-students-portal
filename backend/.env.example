# Backend .env example
APP_PORT=8280
APP_ENV=development
JWT_SECRET=super-secret-change-me
JWT_EXP_DAYS=180
DATABASE_URL=postgres://postgres:postgres@localhost:5432/phd?sslmode=disable

# File storage
UPLOAD_DIR=./uploads

# SMTP (Mailpit default)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="PhD Portal <no-reply@phd.local>"
FRONTEND_BASE_URL=http://localhost:5173


# S3-compatible storage (leave empty to disable)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=phd-portal
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_USE_PATH_STYLE=true

REDIS_URL=redis://localhost:6379

# Redis
REDIS_URL=redis://localhost:6379/0
