# ============================================
# KazNMU PhD Portal - Environment Variables
# ============================================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/phd_portal?sslmode=disable

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Server Configuration
PORT=8080
GIN_MODE=release

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=kaznmu-phd-portal-files

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@kaznmu.edu.kz

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Optional: Unlock all nodes for testing
# VITE_UNLOCK_ALL_NODES=false
