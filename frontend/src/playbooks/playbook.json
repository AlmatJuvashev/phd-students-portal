      "nodes": [
        {
          "id": "E1_apply_omid",
          "title": {
            "ru": "Заявка в ОМиД",
            "kz": "ОМиД-ке өтініш",
            "en": "Application to OMiD"
          },
          "type": "form",
          "actionHints": ["form"],
          "who_can_complete": ["student"],
          "description": {
            "ru": "Готово заявление на предварительную экспертизу в ОМиД?",
            "kz": "ОМиД-ке алдын ала сараптамаға өтініш дайын ба?",
            "en": "Is the application for preliminary review to OMiD ready?"
          },
          "requirements": {
            "templates": [
              "tpl_omid_application_ru_docx",
              "tpl_omid_application_kz_docx",
              "tpl_omid_application_en_docx"
            ]
          },
          "prerequisites": ["W2_GATE"],
          "next": ["NK_package"]
        },
        {
          "id": "NK_package",
          "title": {
            "ru": "Пакет на НК",
            "kz": "ҒК-ға пакет",
            "en": "Package for SC"
          },
          "type": "form",
          "actionHints": ["form"],
          "description": {
            "ru": "Пакет документов собран?",
            "kz": "Құжаттар топтамасы жиналды ма?",
            "en": "Is the document package complete?"
          },
          "who_can_complete": ["student"],
          "prerequisites": ["E1_apply_omid"],
          "requirements": {
            "templates": [
              "tpl_lcb_request_ru_docx",
              "tpl_lcb_request_kz_docx",
              "tpl_lcb_request_en_docx"
            ],
            "ui_hints": {
              "buttons": [
                {
                  "key": "all_ready",
                  "label": {
                    "ru": "Все готово",
                    "kz": "Барлығы дайын",
                    "en": "All set"
                  }
                },
                {
                  "key": "need_lcb_letter",
                  "label": {
                    "ru": "Нужен шаблон письма в ЛКБ",
                    "kz": "ЛБК-ға хат үлгісі керек",
                    "en": "Need LBC letter template"
                  }
                }
              ],
              "template_section_title": {
                "ru": "Загрузить шаблон",
                "kz": "Үлгіні жүктеу",
                "en": "Download template"
              }
            },
            "fields": [
              {
                "key": "chk_thesis_unbound",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Несброшюрованная диссертация (1 экз.)",
                  "kz": "Түптелмеген диссертация (1 дана)",
                  "en": "Unbound thesis (1 copy)"
                }
              },
              {
                "key": "chk_advisor_reviews",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Отзывы консультантов (+ нотариальный перевод при иностранном языке)",
                  "kz": "Кеңесшілер пікірлері (+ шетел тіліндегі болса нотариалды аударма)",
                  "en": "Advisor reviews (+ notarized translation if foreign language)"
                }
              },
              {
                "key": "chk_pubs_app7",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Список и копии публикаций (по Прил. 7)",
                  "kz": "Жарияланымдар тізімі мен көшірмелері (Қос. 7 бойынша)",
                  "en": "List and copies of publications (per App. 7)"
                }
              },
              {
                "key": "chk_sc_extract",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Выписка Ученого совета о теме и консультантах",
                  "kz": "Ғылыми кеңес шешімінен үзінді (тақырып/кеңесшілер)",
                  "en": "Academic Council extract on topic and advisors"
                }
              },
              {
                "key": "chk_primary_docs",
                "type": "boolean",
                "required": false,
                "label": {
                  "ru": "Первичные документы (по запросу)",
                  "kz": "Бастапқы құжаттар (сұрау бойынша)",
                  "en": "Primary documents (on request)"
                }
              },
              {
                "key": "chk_lcb_defense",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Заключение ЛКБ «на защиту» (запрос на lcb@kaznmu.kz с приложением первоначального заключения)",
                  "kz": "ЛБК-ның «қорғауға» қорытындысы (алғашқы қорытындыны қоса lcb@kaznmu.kz поштасына сұрау)",
                  "en": "LBC conclusion “for defense” (email request to lcb@kaznmu.kz with initial conclusion attached)"
                }
              }
            ]
          },
          "outcomes": [
            {
              "value": "complete",
              "when": "form.chk_thesis_unbound && form.chk_advisor_reviews && form.chk_pubs_app7 && form.chk_sc_extract && form.chk_lcb_defense",
              "next": ["E3_hearing_nk"]
            },
            {
              "value": "need_letter",
              "when": "!form.chk_lcb_defense",
              "next": ["NK_package"]
            }
          ]
        },
        {
          "id": "E3_hearing_nk",
          "title": {
            "ru": "Заслушивание НК",
            "kz": "ҒК тыңдауы",
            "en": "SC Hearing"
          },
          "type": "form",
          "actionHints": ["form"],
          "who_can_complete": ["student"],
          "description": {
            "ru": "Подтвердите результаты после заслушивания.",
            "kz": "Тыңдаудан кейінгі нәтижелерді растаңыз.",
            "en": "Confirm post-hearing results."
          },
          "requirements": {
            "ui_hints": {
              "cards_layout": {
                "style": "stacked",
                "animation": "slideUp",
                "card_variant": "question"
              },
              "buttons_style": "yes_no"
            },
            "fields": [
              {
                "key": "hearing_happened",
                "type": "boolean",
                "required": true,
                "label": {
                  "ru": "Заслушивание состоялось?",
                  "kz": "Тыңдау өтті ме?",
                  "en": "Did the hearing take place?"
                },
                "options": {
                  "true": { "ru": "Да", "kz": "Иә", "en": "Yes" },
                  "false": { "ru": "Нет", "kz": "Жоқ", "en": "No" }
                }
              },
              {
                "key": "hearing_reminder",
                "type": "note",
                "visible_when": "form.hearing_happened == false",
                "label": {
                  "ru": "Назначьте и проведите заслушивание НК. Вернитесь к этому шагу после завершения.",
                  "kz": "ҒК тыңдауын жоспарлап, өткізіңіз. Аяқтаған соң осы қадамға қайта оралыңыз.",
                  "en": "Schedule and complete the SC hearing. Return to this step afterward."
                }
              },
              {
                "key": "remarks_exist",
                "type": "boolean",
                "required": false,
                "visible_when": "form.hearing_happened == true",
                "label": {
                  "ru": "Имеются зафиксированные замечания рецензентов/членов НК?",
                  "kz": "Рецензенттер/ҒК мүшелерінің тіркелген ескертпелері бар ма?",
                  "en": "Are there recorded remarks from reviewers/SC members?"
                },
                "options": {
                  "true": { "ru": "Да", "kz": "Иә", "en": "Yes" },
                  "false": { "ru": "Нет", "kz": "Жоқ", "en": "No" }
                }
              },
              {
                "key": "plan_prepared",
                "type": "boolean",
                "required": false,
                "visible_when": "form.hearing_happened == true && form.remarks_exist == true",
                "label": {
                  "ru": "Подготовлен план исправлений?",
                  "kz": "Түзетулер жоспары дайын ба?",
                  "en": "Is a fixes plan prepared?"
                },
                "options": {
                  "true": { "ru": "Да", "kz": "Иә", "en": "Yes" },
                  "false": { "ru": "Нет", "kz": "Жоқ", "en": "No" }
                }
              },
              {
                "key": "plan_reminder",
                "type": "note",
                "visible_when": "form.hearing_happened == true && form.remarks_exist == true && form.plan_prepared != true",
                "label": {
                  "ru": "Сначала создайте план исправлений и вернитесь к этому шагу.",
                  "kz": "Алдымен түзетулер жоспарын жасаңыз да, осы қадамға оралыңыз.",
                  "en": "Create a fixes plan first, then return to this step."
                }
              },
              {
                "key": "remarks_resolved",
                "type": "boolean",
                "required": false,
                "visible_when": "form.hearing_happened == true && form.remarks_exist == true && form.plan_prepared == true",
                "label": {
                  "ru": "Все замечания устранены?",
                  "kz": "Барлық ескертпелер жойылды ма?",
                  "en": "Have all remarks been resolved?"
                },
                "options": {
                  "true": { "ru": "Да", "kz": "Иә", "en": "Yes" },
                  "false": { "ru": "Нет", "kz": "Жоқ", "en": "No" }
                }
              },
              {
                "key": "resolve_reminder",
                "type": "note",
                "visible_when": "form.hearing_happened == true && form.remarks_exist == true && form.plan_prepared == true && form.remarks_resolved != true",
                "label": {
                  "ru": "Устраните все замечания согласно плану, затем подтвердите «Да».",
                  "kz": "Жоспар бойынша барлық ескертпелерді жойып, содан кейін «Иә» деп растаңыз.",
                  "en": "Resolve all remarks per the plan, then confirm “Yes”."
                }
              }
            ],
            "actions": [
              {
                "key": "go_to_ds_no_remarks",
                "kind": "navigate",
                "visible_when": "form.hearing_happened == true && form.remarks_exist == false",
                "label": {
                  "ru": "Переход к подаче документов к ДС",
